<Page
    x:Class="MKVBatchFlow.Uno.Presentation.InputPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MKVBatchFlow.Uno.Presentation"
    xmlns:utu="using:Uno.Toolkit.UI"
    xmlns:Actions="using:MKVBatchFlow.Uno.Services.Actions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer
            Grid.Column="1"
            Grid.Row="1"
            HorizontalScrollBarVisibility="Auto">
            <ListView CornerRadius="5"
                      Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                      Actions:DropFilesBehavior.IsEnabled="True"
                      Actions:DropFilesBehavior.FileDropTarget="{Binding}"
                      ItemsSource="{Binding FileList}"
                      AllowDrop="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      HorizontalContentAlignment="Stretch"
                      SelectionMode="Extended"
                      Loaded="OnLoaded"
                      Unloaded="OnUnloaded"
                      Actions:ListViewSelectedItemsBehavior.BoundSelectedItems="{Binding SelectedFiles}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path}"
                                   TextWrapping="NoWrap"
                                   HorizontalAlignment="Left" />
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                                   Margin="10"
                                   HorizontalAlignment="Center"
                                   Text="Drag &amp; Drop files" />
                        <Rectangle Grid.Row="1"
                                   Height="1"
                                   Fill="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                   Margin="10,0,10,0" />
                    </Grid>
                </ListView.Header>
            </ListView>
        </ScrollViewer>
        <Grid Grid.Row="1"
              Grid.Column="2"
              Margin="10,10,10,10"
              VerticalAlignment="Top">
            <Button Content="Remove Selection"
                    Command="{Binding RemoveSelected}" />
        </Grid>
    </Grid>
</Page>
