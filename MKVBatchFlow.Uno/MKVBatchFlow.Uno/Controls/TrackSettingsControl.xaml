<UserControl
    x:Class="MKVBatchFlow.Uno.Controls.TrackSettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="using:MKVBatchFlow.Uno.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:BatchConfig="using:MKVBatchFlow.Core"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <Converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--Dropdown menu Tracks-->
        <StackPanel Grid.Row="0">
            <ComboBox ItemsSource="{x:Bind Tracks, Mode=OneWay}"
                      SelectedItem="{x:Bind SelectedTrack, Mode=TwoWay}" SelectedIndex="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="BatchConfig:TrackConfiguration">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TrackType}"/>
                            <TextBlock Text="Track"
                                       Margin="5,0,0,0"/>
                            <TextBlock Text="{Binding Position}"
                                       Margin="10,0,0,0"
                                       Opacity="0.7"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <!--Edit-->
        <!--
        <StackPanel Grid.Row="1"
            Margin="0,15,0,0">
            <CheckBox Content="Edit this Track" />
        </StackPanel>-->

        <!--Enable track-->
        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Column="0"
                          Content="Enable track"
                          VerticalAlignment="Bottom"
                          IsChecked="{x:Bind ChangeEnabledTrack, Mode=TwoWay}"/>
                <ContentControl Grid.Column="1"
                                IsEnabled="{x:Bind ChangeEnabledTrack, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Yes"
                                 GroupName="IsEnabledTrackGroup"
                                 IsChecked="{x:Bind IsEnabledTrack, Mode=TwoWay}"
                                 MinWidth="0"
                                 Margin="0,0,20,0"/>
                        <RadioButton Content="No"
                                 GroupName="IsEnabledTrackGroup"
                                 IsChecked="{x:Bind IsEnabledTrack, Mode=TwoWay, Converter={StaticResource InverseBoolConverter}}"
                                 MinWidth="0"/>
                    </StackPanel>
                </ContentControl>
            </Grid>
        </StackPanel>

        <!--Default track-->
        <StackPanel Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Column="0"
                          Content="Default track"
                          VerticalAlignment="Bottom"
                          IsChecked="{x:Bind ChangeDefaultTrack, Mode=TwoWay}"/>
                <ContentControl Grid.Column="1"
                                IsEnabled="{x:Bind ChangeDefaultTrack, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Yes"
                                 GroupName="IsDefaultTrackGroup"
                                 IsChecked="{x:Bind IsDefaultTrack, Mode=TwoWay}"
                                 MinWidth="0"
                                 Margin="0,0,20,0"/>
                        <RadioButton Content="No"
                                 GroupName="IsDefaultTrackGroup"
                                 IsChecked="{x:Bind IsDefaultTrack, Mode=TwoWay, Converter={StaticResource InverseBoolConverter}}"
                                 MinWidth="0"/>
                    </StackPanel>
                </ContentControl>
            </Grid>
        </StackPanel>

        <!--Forced track-->
        <StackPanel Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Column="0"
                          Content="Forced track"
                          VerticalAlignment="Bottom"
                          IsChecked="{x:Bind ChangeForcedTrack, Mode=TwoWay}"/>
                <ContentControl Grid.Column="1"
                                IsEnabled="{x:Bind ChangeForcedTrack, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Yes"
                                 GroupName="IsForcedTrackGroup"
                                 IsChecked="{x:Bind IsForcedTrack, Mode=TwoWay}"
                                 MinWidth="0"
                                 Margin="0,0,20,0"/>
                        <RadioButton Content="No"
                                 GroupName="IsForcedTrackGroup"
                                 IsChecked="{x:Bind IsForcedTrack, Mode=TwoWay, Converter={StaticResource InverseBoolConverter}}"
                                 MinWidth="0"/>
                    </StackPanel>
                </ContentControl>
            </Grid>
        </StackPanel>

        <!--Track name-->
        <StackPanel Grid.Row="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <!--<ColumnDefinition Width="Auto" />-->
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Column="0"
                          Content="Track name"
                          VerticalAlignment="Bottom"
                          IsChecked="{x:Bind ChangeTrackName, Mode=TwoWay}"/>
                <TextBox Grid.Column="1"
                         IsEnabled="{x:Bind ChangeTrackName, Mode=OneWay}"
                         Text="{x:Bind TrackName, Mode=TwoWay}"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
