<UserControl
    x:Class="MatroskaBatchFlow.Uno.Presentation.Controls.TrackSettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="using:MatroskaBatchFlow.Uno.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:BatchConfig="using:MatroskaBatchFlow.Core"
    xmlns:Models="using:MatroskaBatchFlow.Core.Models"
    xmlns:not_skia="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <Converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <x:Int32 x:Key="SettingLabelColWidth">80</x:Int32>
    </UserControl.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--Dropdown menu Tracks-->
        <StackPanel Grid.Row="0">
            <ComboBox ItemsSource="{x:Bind Tracks, Mode=OneWay}"
                      SelectedItem="{x:Bind SelectedTrack, Mode=TwoWay}" SelectedIndex="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="BatchConfig:TrackConfiguration">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TrackType}"/>
                            <TextBlock Text="Track"
                                       Margin="5,0,0,0"/>
                            <TextBlock Text="{Binding Position}"
                                       Margin="10,0,0,0"
                                       Opacity="0.7"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <!--Edit-->

        <!--Default track-->
        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Default: "
                           Grid.Column="0"
                           VerticalAlignment="Center"/>
                <RadioButton Content="Yes"
                             Grid.Column="1"
                             IsChecked="{x:Bind SelectedTrack.Default, Mode=TwoWay}"
                             MinWidth="0"
                             Margin="0,0,20,0"/>
                <RadioButton Content="No"
                             Grid.Column="2"
                             IsChecked="{x:Bind SelectedTrack.Default, Mode=TwoWay, Converter={StaticResource InverseBoolConverter}}"
                             MinWidth="0"/>
            </Grid>
        </StackPanel>

        <!--Forced track-->
        <StackPanel Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Forced: "
                           Grid.Column="0"
                           VerticalAlignment="Center" />
                <RadioButton Content="Yes"
                             Grid.Column="1"
                             IsChecked="{x:Bind SelectedTrack.Forced, Mode=TwoWay}"
                             MinWidth="0"
                             Margin="0,0,20,0" />
                <RadioButton Content="No"
                             Grid.Column="2"
                             IsChecked="{x:Bind SelectedTrack.Forced, Mode=TwoWay, Converter={StaticResource InverseBoolConverter}}"
                             MinWidth="0" />
            </Grid>
        </StackPanel>

        <!--Track name-->
        <StackPanel Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <!--<ColumnDefinition Width="Auto" />-->
                </Grid.ColumnDefinitions>
                <TextBlock Text="Name: "
                           Grid.Column="0"
                           VerticalAlignment="Center"/>
                <TextBox Grid.Column="1"
                         Text="{x:Bind SelectedTrack.Name, Mode=TwoWay}"/>
            </Grid>
        </StackPanel>


        <StackPanel Grid.Row="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Language: "
                          Grid.Column="0"
                          VerticalAlignment="Center" />
                <win:ComboBox Grid.Column="1"
                          Width="150"
                          IsEditable="True"
                          ItemsSource="{x:Bind AvailableLanguages, Mode=OneWay}"
                          DisplayMemberPath="Name">
                </win:ComboBox>
                <!--<AutoSuggestBox 
                                TextChanged="AutoSuggestBox_TextChanged"
                                HorizontalAlignment="Left"
                                Width="300"
                                AutomationProperties.Name="Basic AutoSuggestBox"/>-->

                

                <!--<AutoSuggestBox ItemsSource="{x:Bind FilteredLanguages, Mode=OneWay}"
                                TextChanged="OnLanguageTextChanged"
                                DisplayMemberPath="Name"/>-->

            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
