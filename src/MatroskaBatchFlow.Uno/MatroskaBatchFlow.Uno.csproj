<Project Sdk="Uno.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net9.0-windows10.0.26100;net9.0-desktop;net9.0</TargetFrameworks>

    <OutputType>Exe</OutputType>
    <UnoSingleProject>true</UnoSingleProject>

    <!-- Display name -->
    <ApplicationTitle>MatroskaBatchFlow.Uno</ApplicationTitle>
    <!-- App Identifier -->
    <ApplicationId>com.companyname.MatroskaBatchFlow.Uno</ApplicationId>
    <!-- Versions -->
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <ApplicationVersion>1</ApplicationVersion>
    <!-- Package Publisher -->
    <ApplicationPublisher>Tim</ApplicationPublisher>
    <!-- Package Description -->
    <Description>MatroskaBatchFlow.Uno powered by Uno Platform.</Description>
    <!--
      If you encounter this error message:

        error NETSDK1148: A referenced assembly was compiled using a newer version of Microsoft.Windows.SDK.NET.dll.
        Please update to a newer .NET SDK in order to reference this assembly.

      This means that the two packages below must be aligned with the "build" version number of
      the "Microsoft.Windows.SDK.BuildTools" package above, and the "revision" version number
      must be the highest found in https://www.nuget.org/packages/Microsoft.Windows.SDK.NET.Ref.
    -->
    <!-- <WindowsSdkPackageVersion>10.0.22621.28</WindowsSdkPackageVersion> -->

    <!--
      UnoFeatures let's you quickly add and manage implicit package references based on the features you want to use.
      https://aka.platform.uno/singleproject-features
    -->
    <UnoFeatures>
        Lottie;
        MediaElement;
        Hosting;
        Toolkit;
        Logging;
        LoggingSerilog;
        Mvvm;
        Configuration;
        HttpRefit;
        Serialization;
        Localization;
        ThemeService;
        SkiaRenderer;
    </UnoFeatures>
    <Platforms>AnyCPU;x64</Platforms>
    <PackageCertificateThumbprint>E620B8DF242BDECF6EF3C921BED1FCC5F8E819EF</PackageCertificateThumbprint>
    <PackageCertificateKeyFile>MatroskaBatchFlow.Uno_TemporaryKey.pfx</PackageCertificateKeyFile>
    <AppxPackageSigningEnabled>True</AppxPackageSigningEnabled>
    <PublishAot>False</PublishAot>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="CommunityToolkit.WinUI.Controls.SettingsControls" />
    <None Remove="Assets\Icons\AppList.scale-400.png" />
    <None Remove="Assets\Icons\AppTitleBar.scale-200.png" />
    <None Remove="Presentation\AudioPage.xaml" />
    <None Remove="Presentation\Dialogs\ErrorDialog.xaml" />
    <None Remove="Presentation\GeneralPage.xaml" />
    <None Remove="Presentation\InputPage.xaml" />
    <None Remove="Presentation\OutputPage.xaml" />
    <None Remove="Presentation\SettingsPage.xaml" />
    <None Remove="Presentation\SubtitlePage.xaml" />
    <None Remove="Presentation\VideoPage.xaml" />
    <None Remove="ReadMe.md" />
    <None Remove="Resources\languages.json" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Resources\languages.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <Page Update="Presentation\VideoPage.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>
  <ItemGroup>
    <Page Update="Presentation\GeneralPage.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>
  <ItemGroup>
    <Page Update="Presentation\InputPage.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>
  <ItemGroup>
    <Page Update="Presentation\SubtitlePage.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Presentation\Controls\" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\MatroskaBatchFlow.Core\MatroskaBatchFlow.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <AppxManifest Update="Package.appxmanifest">
