{
  "AppConfigOptions": {
    "Environment": "Development",
    "MkvPropeditPath": "mkvpropedit",
    "UserSettingsPath": "UserSettings.json"
  },
  "LoggingOptions": {
    // Set MinimumLevel to null or empty ("") to allow users to control logging via UI settings.
    // Set to a specific level to override and disable UI control.
    "MinimumLevel": null,
    "RollingInterval": "Day",
    "RetainedFileCountLimit": 31,
    "FileSizeLimitBytes": 1000000,
    "RollOnFileSizeLimit": true
  },
  "ApiClient": {
    "UseNativeHandler": true
  },
  "LocalizationConfiguration": {
    "Cultures": [ "es", "fr", "pt-BR", "en" ]
  },
  "ScanOptions": {
    "DirectoryPath": "", // Set this to the directory you want to scan
    "AllowedExtensions": [ ".mkv" ], // Only mkv is supported.
    "Recursive": true,
    "ExcludeHidden": false
  },
  "LanguageOptions": {
    "FilePath": "Resources\\languages.json"
  }
}
