<Page
    x:Class="MatroskaBatchFlow.Uno.Presentation.VideoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MatroskaBatchFlow.Uno.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="using:MatroskaBatchFlow.Uno.Presentation.Controls"
    xmlns:BatchConfig="using:MatroskaBatchFlow.Core.Services"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--Dropdown menu Tracks-->
        <StackPanel Grid.Row="0">
            <ComboBox ItemsSource="{Binding VideoTracks, Mode=OneWay}"
                      SelectedItem="{Binding SelectedTrack, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="BatchConfig:TrackConfiguration">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TrackType}"/>
                            <TextBlock Text="Track"
                                       Margin="5,0,0,0"/>
                            <TextBlock Text="{Binding Position}"
                                       Margin="10,0,0,0"
                                       Opacity="0.7"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        
        <!--Edit-->
        <Controls:TrackSettingsControl Grid.Row="1"
                                       IsDefaultTrack="{Binding IsDefaultTrack, Mode=TwoWay}"
                                       IsForcedTrack="{Binding IsForcedTrack, Mode=TwoWay}"
                                       AvailableLanguages="{Binding Languages, Mode=OneWay}"
                                       TrackName="{Binding TrackName, Mode=TwoWay}"
                                       IsEnabled="{Binding IsTrackSelected}" />
        <!--<Controls:TrackSettingsControl Grid.Row="1" Tracks="{Binding VideoTracks2, Mode=TwoWay}"
                                       AvailableLanguages="{Binding Languages, Mode=OneWay}"/>-->

        <Button Grid.Row="2" Content="Clear Video Tracks" Command="{Binding ClearVideoTracks}" />
        <Button Grid.Row="3" Content="Mutate the name" Command="{Binding MutateNameTrack}" />
    </Grid>
</Page>
