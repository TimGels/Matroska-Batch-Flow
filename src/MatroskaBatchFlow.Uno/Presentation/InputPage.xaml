<Page
    x:Class="MatroskaBatchFlow.Uno.Presentation.InputPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MatroskaBatchFlow.Uno.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:utu="using:Uno.Toolkit.UI"
    xmlns:Actions="using:MatroskaBatchFlow.Uno.Behavior"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- CommandBar with actions for file list view-->
        <StackPanel Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}"
                    Margin="0,-16,0,12"
                    CornerRadius="{ThemeResource ControlCornerRadius}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <CommandBar Grid.Column="0"
                            DefaultLabelPosition="Right"
                            HorizontalAlignment="Left"
                            Width="Auto">
                    <CommandBar.PrimaryCommands>
                        <AppBarButton Icon="Add" Label="Add Files" />
                        <AppBarSeparator />
                        <AppBarButton Icon="SelectAll"
                                      Label="Select All"
                                      Command="{x:Bind ViewModel.SelectAll}"/>
                        <AppBarButton Icon="ClearSelection"
                                      Label="Undo Selection"
                                      Command="{x:Bind ViewModel.ClearSelection}"/>
                    </CommandBar.PrimaryCommands>
                </CommandBar>

                <!-- Right CommandBar-->
                <CommandBar Grid.Column="1"
                            DefaultLabelPosition="Right"
                            HorizontalAlignment="Right">
                    <CommandBar.PrimaryCommands>
                        <AppBarButton Icon="Remove"
                                      Label="Remove"
                                      Command="{x:Bind ViewModel.RemoveSelected}" />
                        <AppBarSeparator />
                        <AppBarButton Label="Clear"
                                      Command="{x:Bind ViewModel.RemoveAll}">
                            <FontIcon Glyph="&#xEA99;" />
                        </AppBarButton>
                    </CommandBar.PrimaryCommands>
                </CommandBar>
            </Grid>
        </StackPanel>
        
        <ScrollViewer
            Grid.Column="1"
            Grid.Row="1"
            HorizontalScrollBarVisibility="Auto">
            <ListView x:Name="FileDropListView"
                      Background="{ThemeResource ControlStrokeColorDefaultBrush}"
                      CornerRadius="{ThemeResource ControlCornerRadius}"
                      Actions:DropFilesBehavior.IsEnabled="True"
                      Actions:DropFilesBehavior.FileDropTarget="{x:Bind ViewModel}"
                      ItemsSource="{x:Bind ViewModel.FileList}"
                      AllowDrop="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      HorizontalContentAlignment="Stretch"
                      SelectionMode="Extended"
                      Actions:ListViewSelectedItemsBehavior.BoundSelectedItems="{x:Bind ViewModel.SelectedFiles, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:ScannedFileViewModel">
                        <UserControl PointerEntered="ListViewItem_PointerEntered" PointerExited="ListViewItem_PointerExited">
                            <Grid Background="Transparent">
                                <TextBlock HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Text="{x:Bind File.Path}" />

                                <CommandBar x:Name="CommandBar">
                                    <AppBarButton LabelPosition="Collapsed"
                                                  x:Name="HoverButton"
                                                  HorizontalAlignment="Right"
                                                  Command="{x:Bind RemoveSelf}"
                                                  CommandParameter="{x:Bind}"
                                                  IsTabStop="False"
                                                  Visibility="Collapsed">
                                        <AppBarButton.Icon>
                                            <SymbolIcon Symbol="Remove" />
                                        </AppBarButton.Icon>
                                    </AppBarButton>
                                </CommandBar>

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="HoveringStates">
                                        <VisualState x:Name="HoverButtonsHidden" />
                                        <VisualState x:Name="HoverButtonsShown">
                                            <VisualState.Setters>
                                                <Setter Target="HoverButton.Visibility"
                                                        Value="Visible" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </UserControl>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>
