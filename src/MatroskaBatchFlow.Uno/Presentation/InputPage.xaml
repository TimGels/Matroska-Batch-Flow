<Page
    x:Class="MatroskaBatchFlow.Uno.Presentation.InputPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MatroskaBatchFlow.Uno.Presentation"
    xmlns:converters="using:MatroskaBatchFlow.Uno.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:utu="using:Uno.Toolkit.UI"
    xmlns:Actions="using:MatroskaBatchFlow.Uno.Behavior"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skia="http://uno.ui/skia"
    xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d skia"
    NavigationCacheMode="Required">

    <Page.Resources>
        <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>
        <converters:IntThresholdToVisibilityConverter x:Key="IntThresholdToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- CommandBar with actions for file list view-->
        <StackPanel Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    skia:Background="{ThemeResource ControlStrokeColorDefaultBrush}"
                    win:Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondary}"
                    Margin="0,-16,0,12"
                    CornerRadius="{ThemeResource ControlCornerRadius}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <CommandBar Grid.Column="0"
                            DefaultLabelPosition="Right"
                            HorizontalAlignment="Left"
                            Width="Auto">
                    <CommandBar.PrimaryCommands>
                        <AppBarButton Icon="Add"
                                      Command="{x:Bind ViewModel.AddFilesCommand}"
                                      Label="Add Files" />
                        <AppBarSeparator />
                        <AppBarButton Icon="SelectAll"
                                      Label="Select All"
                                      IsEnabled="{x:Bind ViewModel.CanSelectAll, Mode=OneWay}"
                                      Command="{x:Bind ViewModel.SelectAll}"
                                      LabelPosition="Collapsed" />
                        <AppBarButton Icon="ClearSelection"
                                      Label="Undo Selection"
                                      IsEnabled="{x:Bind ViewModel.SelectedFiles.Count, Mode=OneWay, Converter={StaticResource GreaterThanZeroConverter}}"
                                      Command="{x:Bind ViewModel.ClearSelection}"
                                      LabelPosition="Collapsed" />
                    </CommandBar.PrimaryCommands>
                </CommandBar>

                <!-- Right CommandBar-->
                <CommandBar Grid.Column="1"
                            DefaultLabelPosition="Right"
                            HorizontalAlignment="Right">
                    <CommandBar.PrimaryCommands>
                        <AppBarButton Icon="Remove"
                                      Label="Remove"
                                      IsEnabled="{x:Bind ViewModel.SelectedFiles.Count, Mode=OneWay, Converter={StaticResource GreaterThanZeroConverter}}"
                                      Command="{x:Bind ViewModel.RemoveSelected}" />
                        <AppBarSeparator />
                        <AppBarButton Label="Clear"
                                      IsEnabled="{x:Bind ViewModel.FileList.Count, Mode=OneWay, Converter={StaticResource GreaterThanZeroConverter}}"
                                      Command="{x:Bind ViewModel.RemoveAll}">
                            <FontIcon Glyph="&#xEA99;" />
                        </AppBarButton>
                    </CommandBar.PrimaryCommands>
                </CommandBar>
            </Grid>
        </StackPanel>

        <ScrollViewer
            Grid.Column="1"
            Grid.Row="1"
            HorizontalScrollBarVisibility="Auto">
            <ListView x:Name="FileDropListView"
                      skia:Background="{ThemeResource ControlStrokeColorDefaultBrush}"
                      win:Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondary}"
                      CornerRadius="{ThemeResource ControlCornerRadius}"
                      Actions:DropFilesBehavior.IsEnabled="True"
                      Actions:DropFilesBehavior.FileDropTarget="{x:Bind ViewModel}"
                      ItemsSource="{x:Bind ViewModel.FileList}"
                      AllowDrop="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      HorizontalContentAlignment="Stretch"
                      SelectionMode="Extended"
                      Actions:ListViewSelectedItemsBehavior.BoundSelectedItems="{x:Bind ViewModel.SelectedFiles, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:ScannedFileViewModel">
                        <UserControl PointerEntered="ListViewItem_PointerEntered"
                                     PointerExited="ListViewItem_PointerExited">
                            <Grid Background="Transparent">
                                <TextBlock HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Text="{x:Bind File.Path}" />

                                <CommandBar x:Name="CommandBar">
                                    <AppBarButton LabelPosition="Collapsed"
                                                  x:Name="HoverButton"
                                                  HorizontalAlignment="Right"
                                                  Command="{x:Bind RemoveSelf}"
                                                  CommandParameter="{x:Bind}"
                                                  IsTabStop="False"
                                                  Visibility="Collapsed">
                                        <AppBarButton.Icon>
                                            <SymbolIcon Symbol="Remove" />
                                        </AppBarButton.Icon>
                                    </AppBarButton>
                                </CommandBar>

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="HoveringStates">
                                        <VisualState x:Name="HoverButtonsHidden" />
                                        <VisualState x:Name="HoverButtonsShown">
                                            <VisualState.Setters>
                                                <Setter Target="HoverButton.Visibility"
                                                        Value="Visible" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </UserControl>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <!--Drag and Drop text-->
        <StackPanel Grid.Row="1"
                    IsHitTestVisible="False"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Opacity="0.2"
                    Visibility="{x:Bind ViewModel.FileList.Count, Mode=OneWay, Converter={StaticResource IntThresholdToVisibilityConverter}, ConverterParameter='1;Collapsed;Visible'}">
            <TextBlock Text="Drag &amp; Drop here"
                       Style="{StaticResource TitleTextBlockStyle}" />
        </StackPanel>
    </Grid>
</Page>
