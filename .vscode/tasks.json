{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/MatroskaBatchFlow.Uno/MatroskaBatchFlow.Uno.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net10.0-desktop",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/MatroskaBatchFlow.Uno/MatroskaBatchFlow.Uno.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net10.0-desktop",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-winappsdk",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/MatroskaBatchFlow.Uno/MatroskaBatchFlow.Uno.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net10.0-windows10.0.19041",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-winappsdk",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/MatroskaBatchFlow.Uno/MatroskaBatchFlow.Uno.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net10.0-windows10.0.19041",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-solution",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/MatroskaBatchFlow.sln"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
